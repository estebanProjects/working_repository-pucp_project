<div class="row">

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Image Title" autofocus>
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control" placeholder="Image Description"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        
                        <div class="custom-file form-group">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01"
                                aria-describedby="inputGroupFileAddon01" >
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div> 

                     <input type="radio" name="addresolution" id="resolution" value="true"/>agregar resolucion
                      
                      <select name="cursoaguardar" id="cursoaguardar">
                             <option value="algebra">algebra</option>
                             <option value="lectura">lectura</option>
                             <option value="aritmetica">aritmetica</option>
                             <option value="redaccion">redaccion</option>
                             <option value="trigonometria">trigonometria</option>
                             <option value="geometria">geometria</option>
                      </select>  
                          <select name="respuesta" id="respuesta">
                             <option value="a">A</option>
                             <option value="b">B</option>
                             <option value="c">C</option>
                             <option value="d">D</option>
                            
                      </select> 
                    <button class="btn btn-primary">
                        Upload Photo
                    </button>
                    
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
    
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        <a href="{{url}}" target="_blank" class="btn btn-primary">View </a>
                       <!-- <a id="resolutionboton"></a>
                        <script>if (resolURL = 0){document.getElementById("resolutionboton").innerHTML="resolution"}</script> -->
                        <a href="/images/delete/{{asset_id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>